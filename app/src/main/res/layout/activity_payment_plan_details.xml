<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView android:id="@+id/no_plan_found_text" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:text="No plan found."
        android:padding="16dp" />

    <TextView android:id="@+id/generated_at_text" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="No plan found."
        android:layout_marginBottom="16dp" android:textStyle="italic" />

    <ListView
        android:id="@+id/payment_plan_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>